  "uiPatterns": {
    "iconSet": {
      "library": "lucide-react",
      "note": "Future: add enum validation for icon values",
      "validIcons": ["layout", "shield-check", "search", "message-square", "settings", "zap", "mic", "quote"]
    },
    "scoreBreakdown": {
      "primary": "marketingHeadline",
      "secondary": "canonicalName",
      "showOneLiner": true
    },
    "recommendations": {
      "groupBy": "pillar",
      "showPillarBadge": true
    },
    "exports": {
      "useCanonicalNames": true,
      "includeAliases": false
    }
  }
}
